<h1>New posts page</h1>

<%= form_for :post, url: posts_path do |form| %>
  <div class="inputs">
    <p>
      <%= form.label :title  %>
      <%= form.text_field :title %>
    </p>

    <p>
      <%= form.label :body %>
      <%= form.text_area :body %>
    </p>

    <p>
      <%= form.submit %>
    </p>
  </div>
<% end %>
